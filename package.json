{
	"name": "foodian-printer-proxy",
	"version": "2.0.0",
	"description": "Foodian 3D Printer Local Proxy (Electron + HTTPS)",
	"main": "js/main.js",
	"type": "module",
	"scripts": {
		"start": "electron .",
		"build": "electron-builder --win --x64 --config.win.target=nsis"
	},
	"dependencies": {
		"express": "^4.18.2",
		"multer": "^2.0.2",
		"node-fetch": "^3.3.2"
	},
	"devDependencies": {
		"electron": "^31.7.7",
		"electron-builder": "^24.13.3"
	},
	"build": {
		"appId": "com.foodian.printerproxy",
		"productName": "Foodian Printer Proxy",
		"asar": true,
		"asarUnpack": [
			"cert/cert.pem",
			"cert/key.pem",
			"js/proxy.js"
		],
		"files": [
			"dist/**/*",
			"js/**/*",
			"cert/**/*",
			"html/**/*",
			"src/**/*",
			"node_modules/**/*",
			"package.json",
			"!**/*.map",
			"!**/node_modules/@types/**",
			"!**/node_modules/electron*/**",
			"!**/node_modules/*darwin*",
			"!**/node_modules/*linux*"
		],
		"win": {
			"target": "nsis",
			"icon": "css/image/icon.png",
			"requestedExecutionLevel": "requireAdministrator"
		},
		"directories": {
			"buildResources": "assets",
			"output": "release"
		},
		"nsis": {
			"oneClick": true,
			"allowToChangeInstallationDirectory": false,
			"runAfterFinish": true,
			"createDesktopShortcut": true,
			"createStartMenuShortcut": true
		},
		"extraMetadata": {
			"platform": "win32"
		}
	}
}
